@model IEnumerable<EcomerceCRUD.Models.EComerceModel>

@{
    ViewData["Title"] = "Index";
}

<h1>E-commerce Dashboard</h1>

</hr>

<table class="table table-hover bg-warning">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(m => m.ProductId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company)
            </th>
            <th>
                <a asp-controller="EComerce" asp-action="AddOrEdit" class="btn btn-outline-white bg-dark text-white">
                <p><i class="far fa-plus-square"></i>E-commerce</p> </a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <partial name="_show" for="@item" />
        </tr>
        }
    </tbody>
</table>

